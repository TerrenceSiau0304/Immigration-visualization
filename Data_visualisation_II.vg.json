{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "spacing": 100,
  "padding": {"top": 50, "bottom": 10, "left": 0, "right": 0},
  "vconcat": [
    {
      "title": {"text": "Total Arrivals towards Malaysia in 2025",
      "fontSize": 15},
      "width": 800,
      "height": 400, 
      "projection": {"type": "equirectangular", "rotate": [-120, 0, 0]},
      "layer": [
        {
    "data": {"sphere": true},
    "mark": {"type": "geoshape", "fill": "#cce5f5"}
  },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/TerrenceSiau0304/Immigration-visualization/main/js/world_map.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "transform": [
            {
              "lookup": "properties.ISO_A3",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/TerrenceSiau0304/Immigration-visualization/main/data/Immigrants_2024.csv"
                },
                "key": "country",
                "fields": ["total"]
              }
            }
          ],
          "mark": {
            "type": "geoshape",
            "stroke": "#999999",
            "strokeWidth": 1,
            "strokeOpacity": 0.8
          },
          "encoding": {
            "color": {
              "field": "total",
              "type": "quantitative",
              "title": "Number of Arrivals",
              "scale": {"type": "threshold",
      "domain": [1000, 10000, 500000, 1000000],
      "range": ["#f0f9e8", "#bae4bc", "#7bccc4", "#2b8cbe", "#08589e"]}
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {"field": "total", "type": "quantitative", "title": "Arrivals"}
            ]
          }
        },
        {
          "data": {"graticule": true},
          "mark": {"type": "geoshape", "stroke": "#cccccc", "strokeWidth": 0.5}
        }
      ]
    },
{
  "width": 800,
  "height": 400,
  "title": {"text": "Top Origin Countries of arrivals", "fontSize": 15},
  "data": {
    "url": "https://raw.githubusercontent.com/TerrenceSiau0304/Immigration-visualization/main/data/All_Immigrants.csv"
  },
  "transform": [
    {"calculate": "toNumber(datum.total)", "as": "total"},
    {"calculate": "toNumber(datum.year)", "as": "year_num"},
    {
      "calculate": "({'AUS':'Australia','BGD':'Bangladesh','BRN':'Brunei','CHN':'China','GBR':'United Kingdom','IDN':'Indonesia','IND':'India','JPN':'Japan','KOR':'South Korea','NPL':'Nepal','PAK':'Pakistan','PHL':'Philippines','SGP':'Singapore','THA':'Thailand'}[datum.country] || datum.country)",
      "as": "country_name"
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "total", "order": "descending"}],
      "groupby": ["year_num"]
    },
    {"filter": "datum.rank <= 10"}
  ],
  "layer": [
    {
      "mark": {"type": "area", "interpolate": "basis"},
      "encoding": {
        "x": {
          "field": "year_num",
          "type": "quantitative",
          "title": "Year",
          "axis": {
            "labelAngle": 0,
            "format": "d",
            "tickMinStep": 1
          },
          "scale": {"domain": [2020, 2024], "nice": false}
        },
        "y": {
          "aggregate": "sum",
          "field": "total",
          "stack": "center",
          "title": "Arrivals"
        },
        "color": {
          "field": "country_name",
          "type": "nominal",
          "title": "Country",
          "scale": {
          "domain": [
            "Australia", "Bangladesh", "Brunei", "China", "United Kingdom",
            "Indonesia", "India", "Japan", "South Korea", "Nepal",
            "Pakistan", "Philippines", "Singapore", "Thailand"
          ],
          "range": [
            "#1f77b4",  
            "#ff7f0e",  
            "#9467bd",  
            "#8c564b",  
            "#17becf",  
            "#7f7f7f",  
            "#bcbd22",  
            "#e377c2",  
            "#9edae5", 
            "#c5b0d5", 
            "#ffbb78",  
            "#aec7e8", 
            "#c49c94",  
            "#f7b6d2"  
          ]
  }
        },
        "tooltip": [
          {"field": "country_name", "title": "Country"},
          {"field": "year_num", "title": "Year"},
          {"aggregate": "sum", "field": "total", "title": "Total Immigrants"}
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "strokeDash": [4, 4], 
        "color": "grey",
        "strokeWidth": 2
      },
      "encoding": {
        "x": {"datum": 2022}  
      }
    },
     {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -10,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "grey"
      },
      "encoding": {
        "x": {"datum": 2022},
        "y": {"value": 20},
        "text": {"value": "Pandemic lockdown lifted"}
      }
    }
  ]
}
  ],
  "center": true
}