{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "spacing": 100,
  "padding": {"top": 50, "bottom": 40, "left": 0, "right": 0},
  "params": [
    {
      "name": "State_selection",
      "value": "Selangor",
      "bind": {
        "input": "select",
        "options": [
          "Johor",
          "Kedah",
          "Kelantan",
          "Melaka",
          "Negeri Sembilan",
          "Pahang",
          "Perak",
          "Perlis",
          "Pulau Pinang",
          "Sabah",
          "Sarawak",
          "Selangor",
          "Terengganu",
          "W.P. Kuala Lumpur",
          "W.P. Labuan",
          "W.P. Putrajaya"
        ],
        "name": "Select State: "
      }
    }
  ],
  "vconcat": [
    {
      "title": {"text": "Total Arrivals towards Malaysia in 2025",
      "fontSize": 15},
      "width": 800,
      "height": 400, 
      "projection": {"type": "equirectangular", "rotate": [-120, 0, 0]},
      "layer": [
        {
    "data": {"sphere": true},
    "mark": {"type": "geoshape", "fill": "#cce5f5"}
  },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/TerrenceSiau0304/Immigration-visualization/main/js/world_map.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "transform": [
            {
              "lookup": "properties.ISO_A3",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/TerrenceSiau0304/Immigration-visualization/main/data/Immigrants_2024.csv"
                },
                "key": "country",
                "fields": ["total"]
              }
            }
          ],
          "mark": {
            "type": "geoshape",
            "stroke": "#999999",
            "strokeWidth": 1,
            "strokeOpacity": 0.8
          },
          "encoding": {
            "color": {
              "field": "total",
              "type": "quantitative",
              "title": "Number of Arrivals",
              "scale": {"type": "threshold",
      "domain": [1000, 10000, 500000, 1000000],
      "range": ["#f0f9e8", "#bae4bc", "#7bccc4", "#2b8cbe", "#08589e"]}
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {"field": "total", "type": "quantitative", "title": "Arrivals"}
            ]
          }
        },
        {
          "data": {"graticule": true},
          "mark": {"type": "geoshape", "stroke": "#cccccc", "strokeWidth": 0.5}
        }
      ]
    },
{
  "width": 800,
  "height": 400,
  "title": {"text": "Top Origin Countries of arrivals", "fontSize": 15},
  "data": {
    "url": "https://raw.githubusercontent.com/TerrenceSiau0304/Immigration-visualization/main/data/All_Immigrants.csv"
  },
  "transform": [
    {"calculate": "toNumber(datum.total)", "as": "total"},
    {"calculate": "toNumber(datum.year)", "as": "year_num"},
    {
      "calculate": "({'AUS':'Australia','BGD':'Bangladesh','BRN':'Brunei','CHN':'China','GBR':'United Kingdom','IDN':'Indonesia','IND':'India','JPN':'Japan','KOR':'South Korea','NPL':'Nepal','PAK':'Pakistan','PHL':'Philippines','SGP':'Singapore','THA':'Thailand'}[datum.country] || datum.country)",
      "as": "country_name"
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "total", "order": "descending"}],
      "groupby": ["year_num"]
    },
    {"filter": "datum.rank <= 10"}
  ],
  "layer": [
    {
      "mark": {"type": "area", "interpolate": "basis"},
      "encoding": {
        "x": {
          "field": "year_num",
          "type": "quantitative",
          "title": "Year",
          "axis": {
            "labelAngle": 0,
            "format": "d",
            "tickMinStep": 1
          },
          "scale": {"domain": [2020, 2024], "nice": false}
        },
        "y": {
          "aggregate": "sum",
          "field": "total",
          "stack": "center",
          "title": "Arrivals"
        },
        "color": {
          "field": "country_name",
          "type": "nominal",
          "title": "Country"
        },
        "tooltip": [
          {"field": "country_name", "title": "Country"},
          {"field": "year_num", "title": "Year"},
          {"aggregate": "sum", "field": "total", "title": "Total Immigrants"}
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "strokeDash": [4, 4], 
        "color": "grey",
        "strokeWidth": 2
      },
      "encoding": {
        "x": {"datum": 2022}  
      }
    },
     {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -10,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "grey"
      },
      "encoding": {
        "x": {"datum": 2022},
        "y": {"value": 20},
        "text": {"value": "Pandemic lockdown lifted"}
      }
    }
  ]
},
 {
      "title": {"text":"Malaysia Population by State (2025)", "fontSize":15},
      "width": 800,
      "height": 400,
      "projection": {
      "type": "mercator",
      "center": [98, 9],
      "scale": 2100
  },
      "layer": [
        {
            "data": {"sphere": true},
            "mark": {"type": "geoshape", "fill": "#daedf9"}
        },
    {
      "data": {"graticule": {"step": [2, 2]}},
      "mark": {"type": "geoshape", "stroke": "#dddddd", "strokeWidth": 0.8}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TerrenceSiau0304/Immigration-visualization/main/js/Malaysia_state_grid.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/TerrenceSiau0304/Immigration-visualization/main/data/Total_population_by_state.csv"
            },
            "key": "state",
            "fields": ["population", "area"]
          }
        },
        {"calculate": "datum.population/datum.area", "as": "density"}
      ],
      "mark": {"type": "geoshape", "stroke": "#ffffff", "strokeWidth": 0.8},
      "encoding": {
        "color": {
          "field": "density",
          "type": "quantitative",
          "scale": {"scheme": "reds", "type": "log"},
          "title": "Density (/km²)"
        },
        "tooltip": [
          {"field": "properties.name", "title": "State"},
          {"field": "population", "title": "Population (thousands)"},
          {"field": "density", "title": "Density (/km²)"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TerrenceSiau0304/Immigration-visualization/main/js/Malaysia_state_grid.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/TerrenceSiau0304/Immigration-visualization/main/data/Total_population_by_state.csv"
            },
            "key": "state",
            "fields": ["population", "area"]
          }
        },
        {"calculate": "datum.population/datum.area", "as": "density"},
        {
          "window": [{"op": "rank", "as": "rank"}],
          "sort": [{"field": "density", "order": "descending"}]
        },
        {"filter": "datum.rank == 1"},
         {
        "calculate": "'Most Dense: ' + datum['properties.name'] + ' (' + format(datum.density, '.1f') + ' per km²)'",
        "as": "label"
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "geoshape",
            "stroke": "black",
            "strokeWidth": 2
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": -300,
            "dy": 0,
            "fontSize": 13,
            "fontWeight": "bold",
            "color": "black"
          },
          "encoding": {
            "text": {"field": "label"}
          }
        }
      ]
    }
  ]
    },
    {
    "hconcat":[
    {
      "width": 400,
      "height": 400,
      "title": {"text":"Total Population of State by Gender", "fontSize": 15 },
      "data": {
        "url": "https://raw.githubusercontent.com/TerrenceSiau0304/Immigration-visualization/main/data/Total_population_with_state_gender_10years.csv"
      },
        
          "transform": [
            {"calculate": "toNumber(datum.population)", "as": "pop"},
            {"calculate": "toNumber(datum.year)", "as": "year_num"},
            {"filter": "datum.pop > 0"},
            {"filter": "datum.state == State_selection"}
          ],
          "mark": {"type": "line", "interpolate": "monotone", "point": false},
          "encoding": {
            "x": {"field": "year", "type": "ordinal", "title": "Year"},
            "y": {
              "field": "pop",
              "type": "quantitative",
              "title": "Total Population (thousands)"
            },
            "color": {"field": "sex", "type": "nominal", "title": "Sex"},
            "tooltip": [
              {"field": "state", "title": "State"},
              {"field": "year", "title": "Year"},
              {"field": "sex", "title": "Sex"},
              {"field": "pop", "title": "Total Population (thousands)"}
            ]
          }
        
    },
    {"width": 400,
      "height": 400,
      "title": {"text":"Total Population of State by Ethnics", "fontSize": 15},
      "data": {
        "url": "https://raw.githubusercontent.com/TerrenceSiau0304/Immigration-visualization/main/data/Total_population_with_state_ethnicity_10years.csv"
      },
      "layer": [
        {
          "transform": [
            {"calculate": "toNumber(datum.population)", "as": "pop"},
            {"calculate": "toNumber(datum.year)", "as": "year_num"},
            {"filter": "datum.pop > 0"},
            {"filter": "datum.state == State_selection"},
            {"filter": "datum.ethnicity != 'overall'"}
          ],
          "mark": {"type": "bar", "interpolate": "monotone", "point": false},
          "encoding": {
            "x": {"field": "year", "type": "ordinal", "title": "Year"},
            "y": {
              "field": "pop",
              "type": "quantitative",
              "title": "Total Population (thousands)"
            },
            "color": {"field": "ethnicity", "type": "nominal", "title": "Ethnics", "scale": {"domain":["Bumi", "Chinese", "Indian", "Bumi Malay", "Bumi Other", "Other Citizen", "Other Non Citizen"]}},
            "tooltip": [
              {"field": "ethnicity", "title": "Ethnicity"},
              {"field": "year", "title": "Year"},
              {"field": "pop", "title": "Total Population"}

            ]
          }
        }
      ]}
    ],
    "resolve": {"legend": {"color": "independent"}, "scale": {"color": "independent"}}
    }
  ],
  "center": true
}